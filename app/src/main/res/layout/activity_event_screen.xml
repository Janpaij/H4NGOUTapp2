<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jr.h4ngout.EventScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/Creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Creator"
            android:textAlignment="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout3">

        <TextView
            android:id="@+id/DescriptionName"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Description:"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/Description"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/DescriptionName"
            android:layout_toRightOf="@+id/DescriptionName"
            android:gravity="center"
            android:text="Janpaij"
            android:textAppearance="?android:textAppearanceSmall" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout3"
        android:id="@+id/relativeLayout4">

        <TextView
            android:id="@+id/date"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Date"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_start"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/date"
            android:layout_toRightOf="@+id/date"
            android:gravity="center"
            android:text="Start"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/tx_end"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tx_start"
            android:gravity="center"
            android:text="End"
            android:textAppearance="?android:textAppearanceLarge" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout4">

        <TextView
            android:id="@+id/locationName"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Name"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/locationAddress"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/locationName"
            android:layout_toRightOf="@+id/locationName"
            android:gravity="center"
            android:text="Address"
            android:textAppearance="?android:textAppearanceSmall" />

        <ImageButton
            android:id="@+id/Map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/locationAddress"
            android:gravity="center"
            app:srcCompat="@android:drawable/ic_menu_mapmode" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout5">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>